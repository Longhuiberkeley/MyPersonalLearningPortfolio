\begin_layout Plain Layout
Diagram 2.1
\end_layout

\begin_layout Plain Layout
\begin_inset Formula 
\[
\begin{array}{ccc}
\mathbb{C}^{n} & \rightarrow^{f_{n}} & \mathbb{R}^{2n}\\
R_{A}\downarrow &  & \downarrow R_{\rho_{n}\left(A\right)}\\
\mathbb{C}^{n} & \rightarrow^{f_{n}} & \mathbb{R}^{2n}
\end{array}
\]

\end_inset


\end_layout

\begin_layout Plain Layout
we also have
\begin_inset Formula 
\[
\rho_{1}\left(a+b\boldsymbol{i}\right)\coloneqq\left(\begin{array}{cc}
a & b\\
-b & a
\end{array}\right)
\]

\end_inset

and 
\begin_inset Formula 
\[
f_{n}\left(a_{1}+b_{1}\boldsymbol{i},a_{2}+b_{2}\boldsymbol{i},\cdots,a_{n}+b_{n}\boldsymbol{i}\right)\coloneqq\left(a_{1},b_{1},a_{2},b_{2},\cdots,a_{n},b_{n}\right)
\]

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Standard
We want 
\begin_inset Formula $\rho_{n}\coloneqq M_{n}(\mathbb{C})\rightarrow M_{2n}\left(\mathbb{R}\right)$
\end_inset

 that 
\begin_inset Formula $R_{\rho_{n}\left(A\right)}\circ f_{n}=f_{n}\circ R_{A}$
\end_inset

.
 
\end_layout

\begin_layout Standard
For some 
\begin_inset Formula $x=\left(a_{1}+b_{1}\boldsymbol{i},a_{2}+b_{2}\boldsymbol{i},\cdots,a_{n}+b_{n}\boldsymbol{i}\right)\in\mathbb{C}^{n}$
\end_inset

.
 
\end_layout

\begin_layout Standard
Left hand side, 
\begin_inset Formula 
\begin{align*}
R_{\rho_{n}\left(A\right)}\circ f_{n}\left(x\right) & =R_{\rho_{n}\left(A\right)}\circ\left(a_{1},b_{1},a_{2},b_{2},\cdots,a_{n},b_{n}\right)\\
= & \left(a_{1},b_{1},a_{2},b_{2},\cdots,a_{n},b_{n}\right)\left[\begin{array}{ccccc}
a\\
\\
\\
\\
\\
\end{array}\right]
\end{align*}

\end_inset


\end_layout

